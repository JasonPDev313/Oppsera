{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@oppsera/shared": [
        "../../packages/shared/src"
      ],
      "@oppsera/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@oppsera/core": [
        "../../packages/core/src"
      ],
      "@oppsera/core/*": [
        "../../packages/core/src/*"
      ]
    },
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "*.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
