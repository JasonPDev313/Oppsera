{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "dist/**"
      ],
      "env": [
        "DATABASE_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_JWT_SECRET",
        "SUPABASE_JWT_JWK",
        "ADMIN_AUTH_SECRET",
        "DB_POOL_MAX",
        "DB_PREPARE_STATEMENTS"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {},
    "type-check": {},
    "db:migrate": {
      "cache": false
    },
    "db:seed": {
      "dependsOn": [
        "db:migrate"
      ],
      "cache": false
    }
  }
}
