{
  "name": "oppsera",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=2048 turbo dev --filter=@oppsera/web",
    "dev:all": "cross-env NODE_OPTIONS=--max-old-space-size=2048 turbo dev",
    "dev:admin": "cross-env NODE_OPTIONS=--max-old-space-size=2048 turbo dev --filter=@oppsera/admin",
    "dev:clean": "pnpm clean && cross-env NODE_OPTIONS=--max-old-space-size=2048 turbo dev --filter=@oppsera/web",
    "build": "turbo build",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "db:migrate": "turbo db:migrate",
    "db:migrate:remote": "pnpm --filter @oppsera/db db:migrate:remote",
    "db:seed": "turbo db:seed",
    "predeploy": "node scripts/predeploy.cjs",
    "predeploy:json": "node scripts/predeploy.cjs --json",
    "audit:deep": "node scripts/audit-deep.cjs",
    "audit:deep:json": "node scripts/audit-deep.cjs --json",
    "audit:deep:fix": "node scripts/audit-deep.cjs --fix-suggestions",
    "deploy:prod": "node scripts/deploy-oppsera.cjs",
    "wt:create": "node scripts/worktree-create.cjs",
    "wt:remove": "node scripts/worktree-remove.cjs",
    "wt:list": "node scripts/worktree-list.cjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf apps/web/.next apps/admin/.next apps/member-portal/.next .turbo apps/web/.turbo apps/admin/.turbo apps/member-portal/.turbo packages/*/.turbo packages/modules/*/.turbo apps/web/tsconfig.tsbuildinfo apps/admin/tsconfig.tsbuildinfo apps/member-portal/tsconfig.tsbuildinfo",
    "nuke": "pnpm clean && rm -rf node_modules apps/web/node_modules apps/admin/node_modules apps/member-portal/node_modules packages/*/node_modules packages/modules/*/node_modules && pnpm install",
    "postinstall": "node scripts/fix-oxide-win32.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^2.1.0",
    "axe-core": "^4.11.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.16.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jsdom": "^28.1.0",
    "prettier": "^3.4.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0",
    "vitest-axe": "^0.1.0"
  }
}
